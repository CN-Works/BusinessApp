{% extends 'base.html.twig' %}

{% block title %}Create an Employee{% endblock %}

{% block body %}

<div class="navbar-main">
    <a class="navbar-button" href="{{ path("app_employee") }}">See employee list</a>
    <a class="navbar-button" href="{{ path("app_society") }}">See society list</a>
</div>

<h1>Create an Employee :</h1>

{{ form_start(formAddEmployee) }}
    {# Name and family name #}
    <div class="row">
        <div class="col-sm">
            {{ form_row(formAddEmployee.firstname) }}
        </div>
        <div class="col-sm">
            {{ form_row(formAddEmployee.lastname) }}
        </div>
    </div>

    {# Dates related #}
    <div class="row">
        <div class="col-sm">
            {{ form_row(formAddEmployee.dateofbirth) }}
        </div>
        <div class="col-sm">
            {{ form_row(formAddEmployee.datehired) }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm">
            {{ form_row(formAddEmployee.city) }}
        </div>
        <div class="col-sm">
            {{ form_row(formAddEmployee.society) }}
        </div>
    </div>

    <div class="d-grid gap-2">
        {{ form_row(formAddEmployee.submit) }}
    </div>
{{ form_end(formAddEmployee) }}

{% endblock %}
